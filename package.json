{
  "name": "monorepo-fast-next",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "---------------- DOCKER ----------------": "",
    "docker:up": "docker compose up -d",
    "docker:stop": "docker compose stop",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f db",
    "---------------- SETUP ----------------": "",
    "setup:backend-n-db": "yarn docker:up",
    "setup:frontend": "cd frontend && yarn install",
    "setup": "yarn install && yarn setup:frontend  && yarn setup:backend-n-db",
    "---------------- DEV ----------------": "",
    "dev:frontend": "cd frontend && yarn dev",
    "dev:backend": "yarn setup:backend-n-db",
    "dev": "concurrently \"yarn dev:frontend\" \"yarn dev:backend\" --names \"NEXT,API\" --prefix-colors \"blue,yellow\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}